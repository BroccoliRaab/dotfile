export PATH="$PATH:/home/robert/bin"
export PS1="\[\e[34m\]\u\[\e[m\]:\[\e[36m\]\w\[\e[m\]\[\e[32m\]\\$\[\e[m\] "

alias la="ls -alh"
alias apk="sudo apk"
alias reboot="sudo reboot"
alias poweroff="sudo poweroff"

mdc(){
    mkdir -p "$1"
    cd "$1"
}

if [ "$TERM" -eq "xterm-kitty" ]; then
    export TERM=xterm-256color
fi
